# Database Configuration
# 외부 DB 사용 시 아래 값들을 설정하세요
DB_HOST=postgres
DB_PORT=5432
DB_USER=softgate
DB_PASSWORD=softgate
DB_NAME=softgate
DB_SSLMODE=disable
# DB_SSLMODE 옵션: disable, require, verify-ca, verify-full
# - 로컬/Docker DB: disable
# - AWS RDS 등 외부 DB: require 권장

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Storage Configuration (local or s3)
STORAGE_TYPE=local
# STORAGE_BUCKET: 로컬은 파일 경로, S3는 버킷 이름
# - local: softgate-functions (기본값)
# - s3: your-bucket-name
STORAGE_BUCKET=softgate-functions
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
